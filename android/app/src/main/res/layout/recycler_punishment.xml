<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="#171F24" >

    <View
        android:id="@+id/punishmentDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:text="Nick"
        android:textSize="13dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/punishmentDivider" />

    <TextView
        android:id="@+id/dateRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sábado 12/12/2019 às 12:12"
        android:textSize="9dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/divider3"
        app:layout_constraintEnd_toEndOf="@id/divider4"
        app:layout_constraintTop_toTopOf="@id/punishmentDivider" />

    <TextView
        android:id="@+id/reasonRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="200dp"
        android:text="Motivo"
        android:textSize="10dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/divider2"
        app:layout_constraintTop_toTopOf="@id/punishmentDivider"
        app:layout_constraintEnd_toEndOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/punishmentDivider2"
        android:layout_width="match_parent"
        android:layout_marginTop="43dp"
        android:layout_height="1dp"
        android:background="#0099FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:background="#0099FF"
        app:layout_constraintBottom_toBottomOf="@+id/punishmentDivider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:layout_marginStart="80dp"
        android:background="#0099FF"
        app:layout_constraintBottom_toBottomOf="@+id/punishmentDivider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:layout_marginStart="195dp"
        android:background="#0099FF"
        app:layout_constraintBottom_toBottomOf="@+id/punishmentDivider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:background="#0099FF"
        app:layout_constraintBottom_toBottomOf="@+id/punishmentDivider2"
        app:layout_constraintEnd_toEndOf="@+id/recyclerButton"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recyclerButton"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/punishmentDivider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>